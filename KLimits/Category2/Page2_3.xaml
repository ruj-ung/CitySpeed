<Page x:Class="KLimits.Category2.Page2_3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"       
      xmlns:local="clr-namespace:KLimits.Category2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="2.3 Access restrictions">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF084593" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Width="700">
            <TextBlock Foreground="Yellow" Text="2.3	Access restrictions" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32"/>
            <TextBlock Foreground="White" FontSize="18" TextWrapping="Wrap" Margin="0,5" 
                       Text="     Vehicle access to the road's main carriageway(s) can be direct from abutting properties, or indirect via a side road intersection or a service road. There are means of restricting direct and indirect access to reduce the number of points at which vehicles entering the main carriageway(s) interact with the traffic flow. Access restrictions could apply to one side or both sides of the road. Examples of access restrictions are:
    service roads along the main road no direct access (e.g. controlled access via local road network) physical constraints such as a railway line, beach frontage, river, etc.
" />
            <TextBlock Foreground="White" FontSize="18" TextWrapping="Wrap" Margin="0,5" 
                       Text="     Are consistent access restrictions applicable to this road section?" />


            <RadioButton Content="Restrictions to both sides" Foreground="White" FontSize="18" IsChecked="True" Margin="30,0,0,0" Click="Radio1_Click"/>
            <RadioButton Content="Restrictions to one side only" Foreground="White" FontSize="18" Margin="30,0,0,0" Click="Radio2_Click"/>
            <RadioButton Content="No restrictions" Foreground="White" FontSize="18"  Margin="30,0,0,0" Click="Radio3_Click"/>

        </StackPanel>
        <Button Cursor="Hand" x:Name="buttonNext" Height="30" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="buttonNext_Click" Opacity="0.5">
            <materialDesign:PackIcon Kind="ArrowForwardCircle" Foreground="Black" Width="20" Height="20" />
        </Button>
        <Button Cursor="Hand" x:Name="buttonBack" Height="30" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="buttonBack_Click" Opacity="0.5">
            <materialDesign:PackIcon Kind="ArrowBackCircle" Foreground="Black" Width="20" Height="20" />
        </Button>
    </Grid>
</Page>
